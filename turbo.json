{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "globalEnv": [
    "API_URL",
    "WEB_URL",
    "DATABASE_URL",
    "REDIS_URL",
    "ENCRYPTION_KEY",
    "CORS_ORIGINS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        ".output/**",
        ".tanstack/**",
        ".vercel/**",
        "*-exe"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate", "^db:up", "^redis:up"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build", "^db:up", "^redis:up"],
      "cache": false,
      "persistent": true
    },
    "db:up": {
      "cache": false
    },
    "db:down": {
      "cache": false
    },
    "db:delete": {
      "cache": false
    },
    "db:psql": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true
    },
    "db:studio": {
      "cache": false
    },
    "redis:up": {
      "cache": false
    },
    "redis:down": {
      "cache": false
    },
    "redis:delete": {
      "cache": false
    },
    "redis:cli": {
      "cache": false
    }
  }
}
