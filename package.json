{
  "name": "logr",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "oxlint",
    "lint:type": "oxlint --type-aware",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.0",
    "turbo": "^2.7.2",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.5"
}
